# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~





### Front routes ###

# Home page
GET     /                           controllers.Application.index()

# Recherche page
GET     /search                     controllers.Application.search()

# Resultat recherche page
GET     /searchResult               controllers.Application.searchResult()

# Carte du monde page
GET     /map                        controllers.Application.map()

# Parcours list page
GET     /parcoursList               controllers.Application.parcoursList()

# Parcours page
GET     /parcours/:id               controllers.Application.parcours(id : Long)

# Parcours page
GET     /objet/:id                  controllers.Application.objet(id : Long)

# Nuage de mot page
GET     /random                     controllers.Application.random()

# Nuage de mot page
GET     /contact                    controllers.Application.contact()



### User routes ###

# Nuage de mot page
GET     /login                      controllers.User.login()

# Nuage de mot page
GET     /register                   controllers.User.register()

# Nuage de mot page
GET     /passwordForgotten          controllers.User.passwordForgotten()




### Static routes ###

# Nuage de mot page
GET     /aboutUs                    controllers.Static.aboutUs()

# Nuage de mot page
GET     /FAQ                        controllers.Static.faq()






### BackOffice routes ###



















# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
